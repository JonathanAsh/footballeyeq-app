<!-- res/values/themes.xml -->
<resources xmlns:tools="http://schemas.android.com/tools">
<!-- Base application theme -->
<style name="Theme.FootballEyeq" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    <!-- Primary colors and text colors -->
    <item name="colorPrimary">@color/purple_500</item>
    <item name="colorPrimaryVariant">@color/purple_700</item>
    <item name="colorOnPrimary">@color/white</item>
    <item name="colorSecondary">@color/teal_200</item>
    <item name="colorOnSecondary">@color/black</item>

    <!-- Background settings -->
    <item name="android:windowBackground">@color/white</item>

    <!-- Customizing ActionBar, Toolbar, etc. -->
    <item name="android:actionBarStyle">@style/Widget.FootballEyeq.ActionBar</item>
</style>

<!-- Example ActionBar Style, modify as needed -->
<style name="Widget.FootballEyeq.ActionBar" parent="Widget.MaterialComponents.ActionBar.Solid">
    <item name="android:background">@color/purple_500</item>
    <item name="android:titleTextColor">@color/white</item>
</style>
</resources>